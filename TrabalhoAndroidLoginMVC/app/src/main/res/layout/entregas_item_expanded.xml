<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_light"
    android:padding="16dp">

    <TextView
        android:id="@+id/nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Marieta Severo"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/endereco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rua das andorinhas 123"
        android:layout_below="@id/nome" />

    <TextView
        android:id="@+id/cidade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SÃ£o Paulo"
        android:layout_below="@id/endereco" />

    <TextView
        android:id="@+id/telefone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(11)1234-5678"
        android:layout_below="@id/cidade" />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="marieta@gmail.com"
        android:layout_below="@id/telefone" />

    <RelativeLayout
        android:layout_below="@id/email"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/button_mapa"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Mapa"
            android:layout_alignParentLeft="true" />

        <Button
            android:id="@+id/button_selecionar"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Selecionar"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
</RelativeLayout>